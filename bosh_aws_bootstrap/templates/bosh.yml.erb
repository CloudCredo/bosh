---
name: vpc-bosh-<%= name %>
director_uuid: <%= director_uuid %>

networks:
- name: default
  type: manual
  subnets:
  - range: 10.10.0.0/24
    gateway: 10.10.0.1
    dns:
    - 10.10.0.6
    cloud_properties:
      subnet: <%= subnet %>
- name: vip_network
  type: vip
  # Fake network properties to satisfy bosh diff
  subnets:
  - range: 127.0.99.0/24
    gateway: 127.0.99.1
    dns:
    - 127.0.99.250

jobs:
- name: bosh
  networks:
  - name: vip_network
    static_ips:
    - <%= vip %>

properties:
  template_only:
    aws:
      availability_zone: <%= availability_zone %>

  aws:
    access_key_id: <%= access_key_id %>
    secret_access_key: <%= secret_access_key %>
    region: <%= region %>
    default_key_name: <%= key_pair_name %>

   <% if compiled_package_cache? %>
  compiled_package_cache:
    plugin: s3
    options:
      access_key_id: <%= cache_access_key_id %>
      secret_access_key: <%= cache_secret_access_key %>
      bucket_name: <%= cache_bucket_name %>
   <% end %>
